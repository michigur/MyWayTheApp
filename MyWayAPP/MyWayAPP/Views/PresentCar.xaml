<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyWayAPP.Views.PresentCar">
    <ContentPage.Content>
        <StackLayout >

            <Label Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="3" Padding="20,15,0,0">
                <Label.FormattedText>
                    <FormattedString>
                        <Span Text="Email:" FontAttributes="Bold" TextColor="Black" FontSize="18"/>
                        <Span Text="{Binding CarCurrentLocation}" TextColor="#2d2f31" FontSize="18"/>
                    </FormattedString>
                </Label.FormattedText>
            </Label>



        </StackLayout>
    </ContentPage.Content>
</ContentPage>